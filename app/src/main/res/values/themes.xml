<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Customize your light theme here. -->
    <style name="Theme.Music_room" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_green</item>
        <item name="colorSecondaryVariant">@color/primary_green</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Typography -->
    <item name="android:fontFamily">@font/jetbrains_mono</item>
    <item name="fontFamily">@font/jetbrains_mono</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- Hide action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <!-- Player-specific SeekBar style to avoid default Material thumb/track -->
    <style name="AuroraPlayerSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:thumb">@drawable/player_progress_thumb</item>
        <item name="android:progressDrawable">@drawable/player_progress_drawable</item>
        <item name="android:splitTrack">false</item>
        <!-- Let the track be a slim bar while the thumb pill sits centered on it -->
        <item name="android:minHeight">0dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:stateListAnimator">@animator/scale_on_press</item>
        <item name="android:fontFamily">@font/jetbrains_mono</item>
        <item name="fontFamily">@font/jetbrains_mono</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>