<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/albumBackgroundCard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#2A2E3F"
        android:alpha="0.85"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/albumTitleInside"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="After Hours"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/albumArtistInside"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="The Weeknd"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/albumTitleInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/albumCircleSpace"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/albumArtistInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/albumCard"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toBottomOf="@id/albumBackgroundCard"
        app:layout_constraintStart_toStartOf="@id/albumBackgroundCard"
        app:layout_constraintEnd_toEndOf="@id/albumBackgroundCard">

        <ImageView
            android:id="@+id/albumImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/album_placeholder"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/playButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_play_button"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@id/albumCard"
        app:layout_constraintEnd_toEndOf="@id/albumCard"
        app:layout_constraintStart_toStartOf="@id/albumCard"
        app:layout_constraintTop_toTopOf="@id/albumCard"/>

</androidx.constraintlayout.widget.ConstraintLayout>
