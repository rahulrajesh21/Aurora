<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/card_bg_lighter"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Live Indicator -->
        <View
            android:id="@+id/liveIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/live_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/liveText"/>

        <TextView
            android:id="@+id/liveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/live_label"
            android:textColor="@color/primary_green"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/liveIndicator"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Listener Count -->
        <ImageView
            android:id="@+id/listenerIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_people"
            app:tint="@color/text_tertiary"
            app:layout_constraintEnd_toStartOf="@id/listenerCount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/liveText"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/listenerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24"
            android:textColor="@color/text_tertiary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/liveText"/>

        <!-- Room Name -->
        <TextView
            android:id="@+id/roomName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Chill Vibes Only"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/liveText"/>

        <!-- Host Name -->
        <TextView
            android:id="@+id/hostName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Hosted by Alex"
            android:textColor="@color/text_subtitle"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomName"/>

        <!-- Now Playing Section -->
        <TextView
            android:id="@+id/nowPlayingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/now_playing_label"
            android:textColor="@color/text_caption"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hostName"/>

        <TextView
            android:id="@+id/currentSong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Blinding Lights"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nowPlayingLabel"/>

        <TextView
            android:id="@+id/currentArtist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="The Weeknd"
            android:textColor="#B0B5C8"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currentSong"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
