<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Base gradient background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"/>

    <!-- Purple radial blob -->
    <View
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/radial_purple_blob"
        android:alpha="0.6"/>

    <!-- Cyan radial blob -->
    <View
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="-80dp"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/radial_cyan_blob"
        android:alpha="0.5"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:padding="32dp">

        <!-- Top Bar -->
        <TextView
            android:id="@+id/roomsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music_rooms_title"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/createRoomButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add"
            android:padding="12dp"
            android:background="@drawable/circle_button_background"
            app:tint="@color/primary_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/roomsTitle"
            app:layout_constraintBottom_toBottomOf="@id/roomsTitle"/>

        <!-- Active Rooms Section -->
        <TextView
            android:id="@+id/activeRoomsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/active_rooms_subtitle"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomsTitle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/roomsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/activeRoomsLabel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/roomsEmptyState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rooms_empty"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activeRoomsLabel"/>

        <ProgressBar
            android:id="@+id/roomsLoading"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            app:layout_constraintTop_toTopOf="@id/roomsRecyclerView"
            app:layout_constraintBottom_toBottomOf="@id/roomsRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
