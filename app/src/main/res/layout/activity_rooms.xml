<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Base gradient background -->
    <com.example.music_room.ui.GradientView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- Top Bar -->
        <TextView
            android:id="@+id/roomsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music_rooms_title"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="34dp"
            android:layout_marginStart="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/createRoomButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add"
            android:padding="12dp"
            android:background="@drawable/circle_button_background"
            app:tint="@color/primary_green"
            android:layout_marginEnd="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/roomsTitle"
            app:layout_constraintBottom_toBottomOf="@id/roomsTitle"/>

        <!-- Active Rooms Section -->
        <TextView
            android:id="@+id/activeRoomsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/active_rooms_subtitle"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="34dp"
            android:layout_marginStart="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomsTitle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/roomsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/activeRoomsLabel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/roomsEmptyState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rooms_empty"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activeRoomsLabel"/>

        <LinearLayout
            android:id="@+id/roomsSkeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/activeRoomsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <include layout="@layout/item_room_skeleton"/>
            <include layout="@layout/item_room_skeleton"/>
            <include layout="@layout/item_room_skeleton"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
