<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <View
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/joinRoomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_room_title_default"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/joinRoomSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/join_room_subtitle"
            android:textColor="#888888"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="32dp"/>

        <!-- Password Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:fontFamily="monospace"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/digit1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/verification_box_background"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:fontFamily="monospace"
                    android:layout_marginEnd="12dp"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/digit2"/>

                <EditText
                    android:id="@+id/digit2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/verification_box_background"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:fontFamily="monospace"
                    android:layout_marginEnd="12dp"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/digit3"/>

                <EditText
                    android:id="@+id/digit3"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/verification_box_background"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:fontFamily="monospace"
                    android:layout_marginEnd="12dp"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/digit4"/>

                <EditText
                    android:id="@+id/digit4"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/verification_box_background"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:fontFamily="monospace"
                    android:imeOptions="actionDone"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/joinErrorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/error_red"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:visibility="gone"
                android:text="" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Join Button Removed -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelJoinButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/cancel_button"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="monospace"
                style="@style/Widget.Material3.Button.TextButton"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
