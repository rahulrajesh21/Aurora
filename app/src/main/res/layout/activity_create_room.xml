<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />

    <View
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-80dp"
        android:alpha="0.5"
        android:background="@drawable/radial_cyan_blob" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_button_background"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_back"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/createRoomTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/create_room_title"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/backButton"
                app:layout_constraintBottom_toBottomOf="@id/backButton" />

            <TextView
                android:id="@+id/createRoomSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/create_room_subtitle"
                android:textColor="@color/text_secondary_light"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/backButton" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/createRoomCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoomSubtitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="none">

                    <TextView
                        android:id="@+id/basicsLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_room_section_basics"
                        android:textColor="@color/text_secondary_light"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:drawablePadding="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/roomNameLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Room name"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:hintTextColor="@color/primary_purple">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/roomNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textColor="@color/white"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/vibeLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Vibe description"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:hintTextColor="@color/primary_purple">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/vibeInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences"
                            android:maxLines="3"
                            android:textColor="@color/white"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/vibePreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/create_room_vibe_preview_default"
                        android:textColor="@color/text_hint_medium"
                        android:textSize="12sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/vibeSuggestionsGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:singleLine="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipVibeChill"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neon chill"
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/chip_background" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipVibeParty"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="House party"
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/chip_background" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipVibeStudy"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lofi focus"
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/chip_background" />
                    </com.google.android.material.chip.ChipGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/capacityLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Max listeners (optional)"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:hintTextColor="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/capacityInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/accessLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/create_room_section_access"
                        android:textColor="@color/text_secondary_light"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/visibilityToggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/visibilityPublic"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/create_room_visibility_public"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp"
                            app:strokeColor="@color/primary_green"
                            app:icon="@drawable/ic_people"
                            app:iconGravity="textStart"
                            app:iconPadding="12dp"
                            app:iconTint="@color/primary_green" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/visibilityPrivate"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/create_room_visibility_private"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp"
                            app:strokeColor="@color/primary_purple"
                            app:icon="@drawable/ic_lock"
                            app:iconGravity="textStart"
                            app:iconPadding="12dp"
                            app:iconTint="@color/primary_purple" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <TextView
                        android:id="@+id/visibilityHelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/create_room_visibility_help_public"
                        android:textColor="#8790AC"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passcodeLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/create_room_passcode_hint"
                        android:visibility="gone"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:hintTextColor="@color/primary_purple">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passcodeInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="#959DB6" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/createRoomButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/primary_green"
                android:text="@string/create_room_button"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoomCard" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>
