<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Back Button (Matches Music Rooms) -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:animateLayoutChanges="true">

            <!-- Vibe Selector -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT VIBE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:fontFamily="monospace"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vibeRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:layout_marginBottom="24dp" />

            <!-- Custom Vibe Input (Hidden by default) -->
            <LinearLayout
                android:id="@+id/customVibeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CUSTOM VIBE"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#888888"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/customVibeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Describe the vibe..."
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:inputType="textCapSentences" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="24dp"/>
            </LinearLayout>

            <!-- Room Name Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROOM NAME"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/roomNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Enter room name..."
                android:paddingVertical="12dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:inputType="textCapWords" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp"/>

            <!-- Access Toggle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCESS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:fontFamily="monospace"
                android:layout_marginBottom="12dp"/>

            <!-- Custom Animated Toggle -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toggleContainer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/pill_toggle_bg"
                android:padding="4dp">

                <View
                    android:id="@+id/toggleIndicator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_pill_bg"
                    android:elevation="2dp"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/optionPublic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="PUBLIC"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:elevation="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/optionPrivate"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/optionPrivate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="PRIVATE"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#888888"
                    android:fontFamily="monospace"
                    android:elevation="4dp"
                    app:layout_constraintStart_toEndOf="@id/optionPublic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Password Input (Hidden by default) -->
            <LinearLayout
                android:id="@+id/passwordSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PASSWORD"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#888888"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/passcodeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Set a 4-digit passcode"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:inputType="numberPassword"
                    android:maxLength="4"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Floating CTA (White Pill Style) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/createRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="999dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="28dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_add"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE ROOM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="monospace"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
