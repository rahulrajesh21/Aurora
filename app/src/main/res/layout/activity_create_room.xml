<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />

    <View
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-80dp"
        android:alpha="0.5"
        android:background="@drawable/radial_cyan_blob" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:paddingBottom="48dp"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_button_background"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_back"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/createRoomTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/create_room_title"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/backButton"
                app:layout_constraintBottom_toBottomOf="@id/backButton" />

            <TextView
                android:id="@+id/createRoomSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/create_room_subtitle"
                android:textColor="@color/text_secondary_light"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/backButton" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/createRoomCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#1AFFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                android:background="@drawable/gradient_stroke"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoomSubtitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="none">

                    <TextView
                        android:id="@+id/basicsLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_room_section_basics"
                        android:textColor="@color/primary_green"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:textAllCaps="true" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/roomNameLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Room name"
                        app:boxStrokeColor="@color/primary_green"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/primary_green"
                        android:textColorHint="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/roomNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textColor="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/vibeLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Vibe description"
                        app:boxStrokeColor="@color/primary_green"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/primary_green"
                        android:textColorHint="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/vibeInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences"
                            android:maxLines="3"
                            android:textColor="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/vibePreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/create_room_vibe_preview_default"
                        android:textColor="@color/text_hint_medium"
                        android:textSize="12sp"
                        android:fontFamily="@font/outfit"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/vibeSuggestionsGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:singleLine="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipVibeChill"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neon chill"
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/card_bg_lighter"
                            app:chipStrokeColor="@color/glass_stroke"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipVibeParty"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="House party"
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/card_bg_lighter"
                            app:chipStrokeColor="@color/glass_stroke"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipVibeStudy"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lofi focus"
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/card_bg_lighter"
                            app:chipStrokeColor="@color/glass_stroke"
                            app:chipStrokeWidth="1dp" />
                    </com.google.android.material.chip.ChipGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/capacityLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Max listeners (optional)"
                        app:boxStrokeColor="@color/primary_green"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/primary_green"
                        android:textColorHint="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/capacityInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/accessLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="@string/create_room_section_access"
                        android:textColor="@color/primary_purple"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:textAllCaps="true" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/card_bg_dark"
                        app:strokeColor="@color/glass_stroke"
                        app:strokeWidth="1dp">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/visibilityChips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            app:selectionRequired="true"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipVisibilityOpen"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/create_room_visibility_public"
                                android:textColor="@color/white"
                                app:chipIcon="@drawable/ic_people"
                                app:chipIconTint="@color/primary_green"
                                app:chipStrokeColor="@color/glass_stroke"
                                app:chipStrokeWidth="1dp"
                                app:chipCornerRadius="20dp"
                                app:chipBackgroundColor="@color/chip_toggle_bg"
                                app:iconStartPadding="6dp"
                                app:closeIconEnabled="false" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipVisibilityPrivate"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/create_room_visibility_private"
                                android:textColor="@color/white"
                                app:chipIcon="@drawable/ic_lock"
                                app:chipIconTint="@color/primary_purple"
                                app:chipStrokeColor="@color/glass_stroke"
                                app:chipStrokeWidth="1dp"
                                app:chipCornerRadius="20dp"
                                app:chipBackgroundColor="@color/chip_toggle_bg"
                                app:iconStartPadding="6dp"
                                app:closeIconEnabled="false" />
                        </com.google.android.material.chip.ChipGroup>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/visibilityHelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/create_room_visibility_help_public"
                        android:textColor="#8790AC"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passcodeLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/create_room_passcode_hint"
                        android:visibility="gone"
                        app:boxStrokeColor="@color/primary_purple"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/primary_purple"
                        android:textColorHint="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passcodeInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textColor="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/createRoomButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/primary_green"
                android:text="@string/create_room_button"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoomCard" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>
