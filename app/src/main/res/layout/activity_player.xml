<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back"
        android:padding="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/black"
    android:layout_marginStart="24dp"
    android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="26sp"
        android:autoSizeMinTextSize="18sp"
        android:autoSizeStepGranularity="1sp"
        android:text="Lyrics"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"/>

    <ImageView
        android:id="@+id/shareButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_add" 
        android:rotation="45"
        android:padding="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/black"
    android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton"/>

    <!-- Queue Carousel -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/queueCarousel"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"/>

    <!-- Song Info -->
    <TextView
        android:id="@+id/songTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Sonic Youth"
    android:textColor="@color/black"
    android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/jetbrains_mono"
        android:gravity="center"
    app:autoSizeTextType="uniform"
    app:autoSizeMaxTextSize="26sp"
    app:autoSizeMinTextSize="18sp"
    app:autoSizeStepGranularity="1sp"
    android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/queueCarousel"/>

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="BONE"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal"
        android:fontFamily="@font/jetbrains_mono"
        android:background="@drawable/capsule_background_dark"
        android:backgroundTint="@color/black"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/songTitle"/>

    <!-- Lyrics Area -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lyricsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="32dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        app:layout_constraintBottom_toTopOf="@id/progressContainer"/>

    <!-- Progress Bar Container -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingBottom="32dp"
        android:background="@drawable/gradient_background_bottom_fade"
        app:layout_constraintBottom_toBottomOf="parent">

        <SeekBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="@color/accent_green_vibrant"
            android:thumbTint="@color/accent_green_vibrant"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0:00"
                android:textColor="@color/text_secondary_grey"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:text="3:45"
                android:textColor="@color/text_secondary_grey"
                android:textSize="12sp"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
