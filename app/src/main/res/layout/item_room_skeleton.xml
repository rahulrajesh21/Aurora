<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/card_bg_lighter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Live Indicator Skeleton -->
        <com.example.music_room.ui.ShimmerView
            android:id="@+id/liveIndicatorSkeleton"
            android:layout_width="60dp"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Listener Count Skeleton -->
        <com.example.music_room.ui.ShimmerView
            android:layout_width="40dp"
            android:layout_height="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Room Name Skeleton -->
        <com.example.music_room.ui.ShimmerView
            android:id="@+id/roomNameSkeleton"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/liveIndicatorSkeleton"/>

        <!-- Host Name Skeleton -->
        <com.example.music_room.ui.ShimmerView
            android:id="@+id/hostNameSkeleton"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomNameSkeleton"/>

        <!-- Now Playing Label Skeleton -->
        <com.example.music_room.ui.ShimmerView
            android:id="@+id/nowPlayingLabelSkeleton"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hostNameSkeleton"/>

        <!-- Current Song Skeleton -->
        <com.example.music_room.ui.ShimmerView
            android:id="@+id/currentSongSkeleton"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nowPlayingLabelSkeleton"/>

        <!-- Current Artist Skeleton -->
        <com.example.music_room.ui.ShimmerView
            android:layout_width="140dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currentSongSkeleton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
