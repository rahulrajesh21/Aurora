<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp"
    android:background="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/albumArtSkeleton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.example.music_room.ui.ShimmerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <com.example.music_room.ui.ShimmerView
        android:id="@+id/titleSkeleton"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toEndOf="@id/albumArtSkeleton"
        app:layout_constraintEnd_toStartOf="@id/menuSkeleton"
        app:layout_constraintTop_toTopOf="@id/albumArtSkeleton"/>

    <com.example.music_room.ui.ShimmerView
        android:id="@+id/badgeSkeleton"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/albumArtSkeleton"
        app:layout_constraintTop_toBottomOf="@id/titleSkeleton"/>

    <com.example.music_room.ui.ShimmerView
        android:id="@+id/artistSkeleton"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toEndOf="@id/badgeSkeleton"
        app:layout_constraintEnd_toStartOf="@id/menuSkeleton"
        app:layout_constraintTop_toBottomOf="@id/titleSkeleton"
        app:layout_constraintBottom_toBottomOf="@id/albumArtSkeleton"/>

    <com.example.music_room.ui.ShimmerView
        android:id="@+id/menuSkeleton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
