<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Pill-shaped thumb that will be tinted dynamically.
         Keep bounds tight so the visible pill edge aligns with the very ends
         of the track when progress is at 0 or max. -->
    <size
        android:width="40dp"
        android:height="12dp" />
    <corners android:radius="999dp" />
    <solid android:color="@android:color/white" />
</shape>
